<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bj"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/times_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/timebj"
            android:layout_marginTop="8dp"
            android:text="16"
            android:textColor="@android:color/black"
            android:textSize="75sp" ></TextView>

        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/timebj"
            android:layout_marginTop="8dp"
            android:text="42"
            android:textColor="@android:color/black"
            android:textSize="75sp" />

        <TextView
            android:id="@+id/dataTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:text="2011年07年15日  星期五"
            android:textColor="@android:color/white"
            android:textSize="33.0px" />
<ImageView
            android:id="@+id/timebj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:src="@drawable/timebj1" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_backstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backstate" />

    <TableLayout
        android:id="@+id/tablayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tablayout02"
        android:layout_centerHorizontal="true" >

        <TableRow>

            <Button
                android:id="@+id/btn_devicecontrol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/item_homecontrol" />

            <Button
                android:id="@+id/btn_homevideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/item_homevideo" />

          

            <Button
                android:id="@+id/btn_homemode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/item_scenecontrol" />

            <Button
                android:id="@+id/btn_homesetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/item_homemanage" />

            <Button
                android:id="@+id/btn_ExitApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/item_videocontrol" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tablayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <TableRow>

            <TextView
                android:id="@+id/tv_homecontrol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="5dp"
                android:text="@string/item_homecontrol"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_homevideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="32dp"
                android:text="@string/item_homevideo"
                android:textColor="#ffffffff" />

       <!--      <TextView
                android:id="@+id/tv_homeentertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/item_homeentertainment"
                android:textColor="#ffffffff" /> -->

            <TextView
                android:id="@+id/tv_scenecontrol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/item_scenecontrol"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_homemanage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/item_homemanage"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_App_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/item_videocontrol"
                android:textColor="#ffffffff" />
        </TableRow>
    </TableLayout>

</RelativeLayout>