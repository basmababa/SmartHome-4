<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/homevideo_connect_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="频道"
        android:textColor="#ffffffff"
        android:textSize="19.0dp" />

    <com.example.smarthome.VideoSetupActivity.VideoSetupSubActivity.SjrsSurfaceView
        android:id="@+id/homevideo_video"
        android:layout_width="230.0dp"
        android:layout_height="230.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginTop="60dp"
        android:keepScreenOn="true" />

    <RelativeLayout
        android:id="@+id/fivederect"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10.0dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/homevideo_video"
        android:background="@drawable/fivederectionbj"
        android:orientation="vertical" >

        <Button
            android:id="@+id/up_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6.0dp"
            android:background="@drawable/up_video" />

        <Button
            android:id="@+id/span_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/span_video" />

        <Button
            android:id="@+id/down_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6.0dp"
            android:background="@drawable/down_video" />

        <Button
            android:id="@+id/left_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6.0dp"
            android:background="@drawable/left_video" />

        <Button
            android:id="@+id/right_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6.0dp"
            android:background="@drawable/right_video" />
    </RelativeLayout>

    <Button
        android:id="@+id/stop_video"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/fivederect"
        android:layout_marginLeft="15.0dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/homevideo_video"
        android:background="@drawable/shortbutton"
        android:text="@string/stop"
        android:textColor="#ffffffff"
        android:textSize="22.0dp" />

</RelativeLayout>